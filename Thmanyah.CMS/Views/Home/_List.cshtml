@model List<PostDto>

@if(Model.Count() > 0)
{
    @foreach (var post in Model)
    {
        <div class="col-md-4 mb-4">

            <div class="card h-100 shadow-sm">

                <div class="card-img-wrapper">
                    <img src="@post.Image" class="card-img-top" alt="...">
                </div>
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">
                        @post.Meta
                    </p>
                </div>
            </div>


           @*  <div class="card h-100 shadow-sm">
                <img src="@post.Image" class="card-img-top" alt="...">
