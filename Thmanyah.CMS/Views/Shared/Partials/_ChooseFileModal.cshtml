@{
    Layout = null;
}
<div class="modal fade" id="choose-file-modal" data-id="" data-type="" data-path="">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Resources.ChooseFile</h5>
                <div class="btn btn-sm btn-icon btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-2x"><span class="path1"></span><span class="path2"></span></i>
                </div>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-dark modal-submit">@Resources.SaveChanges</button>
                <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">@Resources.Close</button>
            </div>
        </div>
    </div>
</div>